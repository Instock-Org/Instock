<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_room_text"
        android:text="@string/start_title"
        android:textSize="25dp"
        android:textColor="@color/darkPurple"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/room_type_one_card_view"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/home_side_margins"
        android:layout_marginLeft="@dimen/home_side_margins"
        card_view:cardBackgroundColor="@color/seaGreen"
        card_view:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="@id/select_room_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/room_type_two_card_view"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/room_type_one_text"
            android:text="@string/start_customer_login"
            android:textSize="@dimen/room_type_text_side"
            android:textColor="@color/darkPurple"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/room_type_two_card_view"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="@dimen/home_side_margins"
        android:layout_marginLeft="@dimen/home_side_margins"
        card_view:cardBackgroundColor="@color/seaGreen"
        card_view:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/room_type_one_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/room_type_two_text"
            android:text="@string/start_employee_login"
            android:textSize="@dimen/room_type_text_side"
            android:textColor="@color/darkPurple"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>